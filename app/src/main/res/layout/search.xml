<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="@dimen/post_pading_horizontal"
        android:layout_marginTop="@dimen/post_pading_vertical"
        android:layout_marginRight="@dimen/post_pading_horizontal"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        >
    <ImageView
        android:id="@+id/search_PP"
        android:layout_width="112dp"
        android:layout_height="109dp"
        android:src="@drawable/paysage3"></ImageView>
    <TextView
        android:id="@+id/search_pseudo"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:paddingLeft="120dp"
        android:paddingTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="pseudo"></TextView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
