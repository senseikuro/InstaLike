<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_Image_pp"
            android:layout_width="47dp"
            android:layout_height="53dp"
            android:adjustViewBounds="true"
            android:src="@drawable/paysage3"></ImageView>
        <TextView
            android:id="@+id/post_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ichiban Japan"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_gravity="center"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/post_image_post"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:adjustViewBounds="true"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_like"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/heart"></ImageView>
        <ImageView
            android:id="@+id/post_commentary"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/messagepost"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/post_nb_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="132"
            android:textSize="20sp"
            android:textColor="#000000"></TextView>
        <TextView
            android:id="@+id/post_jaime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J'aime"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ichiban Japan: superbe voyage dans la ville de tokyo, j'ai pu dÃ©cuvrir plein de nouveaux plats et faire des rencontres"
            android:textSize="20sp"
            android:textColor="#000000"></TextView>

    </LinearLayout>

</LinearLayout>